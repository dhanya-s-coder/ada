// Online C compiler to run C program online
#include <stdio.h>

int main() {
   int n;
   scanf("%d",&n);
   int x,i;
   int c=0;
   scanf("%d",&x);
   int a[n+1];
   for(i=0;i<n+1;i++){
       scanf("%d",&a[i]);
   }
   int result =a[n];
   for(i=n;i>=0;i--){
       result=result*x+a[i];
       c++;
   }
   printf("%d %d",c,result);
}
