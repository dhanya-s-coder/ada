#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    int a[n][n];
    int i, j;

    // Input matrix
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            scanf("%d", &a[i][j]);
        }
    }

    int sum = 0;
    i = 0;
    j = n - 1; // Start from top-right corner

    while (i < n && j >= 0) {
        if (a[i][j] == 1) {
            sum += (j + 1); // Count all 1s in this row
            i++;             // Move down to next row
        } else {
            j--;             // Move left
        }
    }

    printf("%d", sum);
    return 0;
}

