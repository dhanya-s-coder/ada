#include <stdio.h>
#define MAX 10  // Total array size

int arr[MAX];
int top1, top2;

// ðŸ”¹ Initialize both stacks
void initialize() {
    top1 = -2;  // so first even index will be 0
    top2 = -1;  // so first odd index will be 1
}

// ðŸ”¹ Push for Stack 1 (Even indices)
void push1(int value) {
    if (top1 + 2 >= MAX) {
        printf("Stack 1 Overflow!\n");
        return;
    }
    top1 += 2;
    arr[top1] = value;
    printf("%d pushed to Stack 1.\n", value);
}

// ðŸ”¹ Push for Stack 2 (Odd indices)
void push2(int value) {
    if (top2 + 2 >= MAX) {
        printf("Stack 2 Overflow!\n");
        return;
    }
    top2 += 2;
    arr[top2] = value;
    printf("%d pushed to Stack 2.\n", value);
}

// ðŸ”¹ Pop for Stack 1
int pop1() {
    if (top1 < 0) {
        printf("Stack 1 Underflow!\n");
        return -1;
    }
    int val = arr[top1];
    top1 -= 2;
    return val;
}

// ðŸ”¹ Pop for Stack 2
int pop2() {
    if (top2 < 0) {
        printf("Stack 2 Underflow!\n");
        return -1;
    }
    int val = arr[top2];
    top2 -= 2;
    return val;
}

// ðŸ”¹ Display Stack 1
void display1() {
    if (top1 < 0) {
        printf("Stack 1 is empty.\n");
        return;
    }
    printf("Stack 1 (top to bottom): ");
    for (int i = top1; i >= 0; i -= 2) {
        printf("%d ", arr[i]);
    }
    printf("\n");
}

// ðŸ”¹ Display Stack 2
void display2() {
    if (top2 < 0) {
        printf("Stack 2 is empty.\n");
        return;
    }
    printf("Stack 2 (top to bottom): ");
    for (int i = top2; i >= 1; i -= 2) {
        printf("%d ", arr[i]);
    }
    printf("\n");
}

// ðŸ”¹ Main function
int main() {
    initialize();

    push1(10);
    push1(20);
    push1(30);

    push2(15);
    push2(25);
    push2(35);

    display1();
    display2();

    printf("Popped from Stack 1: %d\n", pop1());
    printf("Popped from Stack 2: %d\n", pop2());

    display1();
    display2();

    return 0;
}
