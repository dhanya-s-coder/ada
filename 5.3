#include <stdio.h>

int main() {
    int n;
    printf("Enter the value of n: ");
    scanf("%d", &n);

    int A[n];
    printf("Enter %d integers: ", n);
    for(int i = 0; i < n; i++) scanf("%d", &A[i]);

    int min_price = A[0];
    int min_day = 1;  // 1-based indexing
    int max_profit = 0;
    int buy_day = 0, sell_day = 0;

    for(int i = 1; i < n; i++) {
        int profit = A[i] - min_price;

        if(profit > max_profit) {
            max_profit = profit;
            buy_day = min_day;
            sell_day = i + 1; // 1-based day
        }

        if(A[i] < min_price) {
            min_price = A[i];
            min_day = i + 1;
        }
    }

    if(max_profit > 0)
        printf("buy on %d, sell on %d\n", buy_day, sell_day);
    else
        printf("No profit possible.\n");

    return 0;
}
